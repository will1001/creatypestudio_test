{
  "info": {
    "_postman_id": "8c9f19a0-62a2-4ee4-9c26-16477a4d3dd5",
    "name": "WooCommerce LocalWP API",
    "description": "Requests for exercising the WooCommerce REST API exposed from the LocalWP site at {{baseUrl}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "{{consumerKey}}",
        "type": "string"
      },
      {
        "key": "password",
        "value": "{{consumerSecret}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wp-json/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            ""
          ]
        },
        "description": "Quick ping to confirm the LocalWP instance is reachable and the REST API root responds."
      }
    },
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/products?per_page=20&page=1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "products"
          ],
          "query": [
            {
              "key": "per_page",
              "value": "20"
            },
            {
              "key": "page",
              "value": "1"
            }
          ]
        },
        "description": "Fetch the latest catalog of products with pagination parameters you can tweak."
      }
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "products",
            "{{productId}}"
          ]
        },
        "description": "Retrieve details for a single product. Update the productId variable to target a specific item."
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Postman Font\",\n  \"type\": \"simple\",\n  \"regular_price\": \"25\",\n  \"description\": \"Sample product created from the Postman collection.\",\n  \"short_description\": \"Created via API\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "products"
          ]
        },
        "description": "Creates a minimal simple product. Adjust payload fields before sending to match your catalog requirements."
      }
    },
    {
      "name": "List Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/orders?per_page=20",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "orders"
          ],
          "query": [
            {
              "key": "per_page",
              "value": "20"
            }
          ]
        },
        "description": "Return recent orders so you can inspect status, totals, and billing info."
      }
    },
    {
      "name": "Create Order (Cash on Delivery)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"payment_method\": \"cod\",\n  \"payment_method_title\": \"Cash on Delivery\",\n  \"set_paid\": true,\n  \"billing\": {\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\",\n    \"address_1\": \"123 Font Street\",\n    \"city\": \"Jakarta\",\n    \"state\": \"JK\",\n    \"postcode\": \"12940\",\n    \"country\": \"ID\",\n    \"email\": \"jane@example.com\",\n    \"phone\": \"081234567890\"\n  },\n  \"shipping\": {\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\",\n    \"address_1\": \"123 Font Street\",\n    \"city\": \"Jakarta\",\n    \"state\": \"JK\",\n    \"postcode\": \"12940\",\n    \"country\": \"ID\"\n  },\n  \"line_items\": [\n    {\n      \"product_id\": {{productId}},\n      \"quantity\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "orders"
          ]
        },
        "description": "Creates a cash-on-delivery order using the product referenced by productId."
      }
    },
    {
      "name": "Create Order (Credit Card)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"payment_method\": \"stripe\",\n  \"payment_method_title\": \"Credit Card (Test)\",\n  \"set_paid\": true,\n  \"billing\": {\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\",\n    \"address_1\": \"123 Font Street\",\n    \"city\": \"Jakarta\",\n    \"state\": \"JK\",\n    \"postcode\": \"12940\",\n    \"country\": \"ID\",\n    \"email\": \"jane@example.com\",\n    \"phone\": \"081234567890\"\n  },\n  \"shipping\": {\n    \"first_name\": \"Jane\",\n    \"last_name\": \"Doe\",\n    \"address_1\": \"123 Font Street\",\n    \"city\": \"Jakarta\",\n    \"state\": \"JK\",\n    \"postcode\": \"12940\",\n    \"country\": \"ID\"\n  },\n  \"line_items\": [\n    {\n      \"product_id\": {{productId}},\n      \"quantity\": 1\n    }\n  ],\n  \"meta_data\": [\n    {\n      \"key\": \"_card_token\",\n      \"value\": \"tok_test_4242\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "orders"
          ]
        },
        "description": "Simulates a card payment (Stripe-style) by flagging the order as paid and attaching a fake token in meta_data."
      }
    },
    {
      "name": "Create Order (PayPal)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"payment_method\": \"paypal\",\n  \"payment_method_title\": \"PayPal\",\n  \"set_paid\": false,\n  \"billing\": {\n    \"first_name\": \"John\",\n    \"last_name\": \"Smith\",\n    \"address_1\": \"456 Glyph Avenue\",\n    \"city\": \"Bandung\",\n    \"state\": \"JB\",\n    \"postcode\": \"40115\",\n    \"country\": \"ID\",\n    \"email\": \"john@example.com\",\n    \"phone\": \"081298765432\"\n  },\n  \"shipping\": {\n    \"first_name\": \"John\",\n    \"last_name\": \"Smith\",\n    \"address_1\": \"456 Glyph Avenue\",\n    \"city\": \"Bandung\",\n    \"state\": \"JB\",\n    \"postcode\": \"40115\",\n    \"country\": \"ID\"\n  },\n  \"line_items\": [\n    {\n      \"product_id\": {{productId}},\n      \"quantity\": 1\n    }\n  ],\n  \"meta_data\": [\n    {\n      \"key\": \"paypal_order_reference\",\n      \"value\": \"PAYPAL-MOCK-{{orderReference}}\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "orders"
          ]
        },
        "description": "Mocks a PayPal checkout where the order is created but not yet captured; update the orderReference variable to match your sandbox data."
      }
    },
    {
      "name": "Update Order Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/orders/{{orderId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "orders",
            "{{orderId}}"
          ]
        },
        "description": "Updates a specific order's status. Set orderId to the order you want to modify."
      }
    },
    {
      "name": "List Customers",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/wp-json/wc/v3/customers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "wp-json",
            "wc",
            "v3",
            "customers"
          ]
        },
        "description": "Returns the customers registered in WooCommerce."
      }
    }
  ]
}
